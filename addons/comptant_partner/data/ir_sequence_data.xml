<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <!-- Séquence pour les factures normales (non comptant) -->
        <record id="sequence_facture_normale" model="ir.sequence">
            <field name="name">Séquence Facture Normale</field>
            <field name="code">facture.normale.sequence</field>
            <field name="prefix">FACT-N-</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
        </record>
        
        <!-- Séquence pour les factures comptant -->
        <record id="sequence_facture_comptant" model="ir.sequence">
            <field name="name">Séquence Facture Comptant</field>
            <field name="code">facture.comptant.sequence</field>
            <field name="prefix">FACT-C-</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
        </record>
        
        <!-- Séquence pour les avoirs normaux (non comptant) -->
        <record id="sequence_avoir_normal" model="ir.sequence">
            <field name="name">Séquence Avoir Normal</field>
            <field name="code">avoir.normale.sequence</field>
            <field name="prefix">AV-N-</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
        </record>
        
        <!-- Séquence pour les avoirs comptant -->
        <record id="sequence_avoir_comptant" model="ir.sequence">
            <field name="name">Séquence Avoir Comptant</field>
            <field name="code">avoir.comptant.sequence</field>
            <field name="prefix">AV-C-</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
        </record>
    </data>
</odoo>